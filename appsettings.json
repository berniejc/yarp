{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "{**catch-all}",
          "Hosts": [
            "house.local",
            "home.campbellfamily.co.uk",
            "house.interavo.co.uk",
            "house.campbellfamily.co.uk"
          ]
        }
      },
      "route2": {
        "ClusterId": "cluster2",
        "Match": {
          "Path": "{**catch-all}",
          "Hosts": [
            "interavo.co.uk",
            "www.interavo.co.uk",
            "campbellfamily.co.uk",
            "www.campbellfamily.co.uk",
            "wrightnow.co.uk",
            "www.wrightnow.co.uk",
            "wildmoorwatsons.co.uk",
            "www.wildmoorwatsons.co.uk",
            "theharveys.co.uk",
            "www.theharveys.co.uk",
            "email-box.co.uk",
            "www.email-box.co.uk",
            "mail-to.co.uk",
            "www.mail-to.co.uk",
            "oakmeadow.co.uk",
            "www.oakmeadow.co.uk",
            "mysurname.co.uk",
            "www.mysurname.co.uk",
            "test.campbellfamily.co.uk",
            "smithsfamily.co.uk",
            "www.smithsfamily.co.uk",
            "test.smithsfamily.co.uk"
          ] 
        },
        "Transforms":[
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "route3":{
        "ClusterId": "cluster3",
        "Match": {
          "Path": "{**catch-all}",
          "Hosts": [
            "leaderboard.sherfieldoaksrollup.org",
            "golf.campbellfamily.co.uk",
            "test.email-box.co.uk"
          ] 
        },
        "Transforms":[
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "route4": {
        "ClusterId": "cluster4",
        "Match": {
          "Path": "{**catch-all}",
          "Hosts": [
            "skiavoriaz.co.uk",
            "skiavoriaz.com",
            "test.skiavoriaz.co.uk"
          ]
        }
      }
    },
    "Clusters": {
      "cluster1": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:8080"
          }
        }
      },
      "cluster2": {
        "Destinations": {
          "destination2": {
            "Address": "http://localhost:8030"
          }
        }
      },
      "cluster3": {
        "Destinations": {
          "destination3":{
            "Address": "http://localhost:8050"
          }
        }
      },
      "cluster4": {
        "Destinations": {
          "destination4": {
            "Address": "http://localhost:8060"
          }
        }
      }
    }
  }
}